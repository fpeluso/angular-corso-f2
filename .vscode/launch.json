{
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Firefox against localhost",
            "file": "${workspaceFolder}/client"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Launch Edge (Frontend App)",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/client"
        }
    ]
}